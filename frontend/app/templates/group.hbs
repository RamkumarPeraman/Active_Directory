<div class="group-grid">
  <h1 class="heading">Groups</h1>
  <div class="tiles">
    {{#each this.groups as |group|}}
      <div class="tile">
        <a href="#" {{on "click" (fn this.showGroupDetails group.id)}}>{{group.group_name}}</a>
      </div>
    {{else}}
      <p>No groups found.</p>
    {{/each}}
  </div>
  {{#if this.selectedGroup}}
    <div class="popup">
      <div class="popup-content">
        <button class="close-button" type="button" {{on "click" this.closePopup}}>X</button>
        <p>
          <strong>Group Name:</strong>
          {{#if this.selectedGroup.group_name}}
            <i>{{this.selectedGroup.group_name}}</i>
          {{else}}
            <i>No Group Name found</i>
          {{/if}}
        </p>
        <p>
          <strong>Description:</strong>
          {{#if this.selectedGroup.description}}
            <i>{{this.selectedGroup.description}}</i>
          {{else}}
            <i>No Description found</i>
          {{/if}}
        </p>
      </div>
    </div>
  {{/if}}
</div>
