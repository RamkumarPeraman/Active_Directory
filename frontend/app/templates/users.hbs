<div class="user-grid">
  <h1 class="heading">Users</h1>
  <div class="tiles">
    {{#each this.users as |user|}}
      <div class="tile">
        <a href="#" {{on "click" (fn this.showUserDetails user.id)}}>{{user.firstName}}</a>
      </div>
    {{else}}
      <p>No users found.</p>
    {{/each}}
  </div>
  {{#if this.selectedUser}}
    <div class="user-popup">
      <div class="popup-content">
        <button class="close-button" {{on "click" this.closePopup}}>X</button>
        <p>
            <strong>First Name:</strong>
            {{#if this.selectedUser.firstName}}
               <i>{{this.selectedUser.firstName}}</i>
            {{else}}
               <i>No First Name found</i>
            {{/if}}
        </p>
         <p>
            <strong>Last Name:</strong>
            {{#if this.selectedUser.lastName}}
               <i>{{this.selectedUser.lastName}}</i>
            {{else}}
              <i>No Last Name found</i>
            {{/if}}
        </p>
         <p>
            <strong>Phone Number:</strong>
            {{#if this.selectedUser.phoneNumber}}
               <i>{{this.selectedUser.phoneNumber}}</i> 
            {{else}}
               <i>No Phone Number found</i>
            {{/if}}
          </p>
          {{!-- <p>
            <strong>Mail:</strong>
            {{#if this.selectedUser.mail}}
              {{this.selectedUser.mail}}
            {{else}}
              <i> No mail found </i>
            {{/if}}
          </p> --}}
      </div>
    </div>
  {{/if}}
</div>
